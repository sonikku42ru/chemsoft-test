<Window 
    x:Class="ChemsoftTest.UI.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:localization="clr-namespace:ChemsoftTest.UI.Localization"
    xmlns:views="clr-namespace:ChemsoftTest.UI.Views"
    xmlns:models="clr-namespace:ChemsoftTest.UI.Views.Models"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance views:MainWindowViewModel, IsDesignTimeCreatable=True}"
    Title="{x:Static localization:MainWindowStrings.MainWindowTitle}" 
    MinHeight="520"
    MinWidth="700"
    Height="520" 
    Width="700">
    
    <Window.Resources>
    
        <views:PersonValidationColorConverter x:Key="PersonValidationColorConverter"/>
        
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition
                MinHeight="425"
                Height="*"/>
            <RowDefinition
                Height="28"/>
        </Grid.RowDefinitions>
        
        <Menu
            Grid.Row="0"
            Grid.Column="0"
            VerticalAlignment="Top"
            VerticalContentAlignment="Stretch"
            Height="24"
            Panel.ZIndex="1">
            
            <MenuItem 
                Height="24"
                Header="Item 1"/>
            
            <MenuItem 
                Height="24"
                Header="Item 2"/>
            
        </Menu>
        
        <Grid
            Grid.Row="1"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition 
                    MinHeight="30" 
                    Height="Auto"/>
                <RowDefinition 
                    Height="*"
                    MinHeight="100"/>
            </Grid.RowDefinitions>
            
            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Orientation="Horizontal">
                
                <Label
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    VerticalContentAlignment="Center"
                    Margin="2"
                    Content="Search:"/>
                
                <TextBox
                    Margin="2"
                    Width="150"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    TextWrapping="NoWrap"/>
                
            </StackPanel>
            
            <DataGrid
                Grid.Row="1"
                Grid.Column="0"
                x:Name="PersonTableGrid"
                Margin="2"
                AutoGenerateColumns="False"
                VerticalAlignment="Stretch"
                ItemsSource="{Binding 
                    Path=Persons, 
                    IsAsync=True,
                    Mode=TwoWay}"
                SelectedItem="{Binding SelectedPerson}"
                SelectionMode="Single"
                SelectionUnit="Cell"
                CanUserAddRows="True"
                EnableRowVirtualization="True"
                EnableColumnVirtualization="True"
                IsReadOnly="False"
                VirtualizingPanel.IsVirtualizing="True"
                VirtualizingPanel.VirtualizationMode="Recycling"
                VirtualizingPanel.IsContainerVirtualizable="True"
                VirtualizingPanel.ScrollUnit="Pixel"
                VirtualizingPanel.CacheLengthUnit="Pixel"
                VirtualizingPanel.IsVirtualizingWhenGrouping="True">
                
                <DataGrid.Columns>
                    
                    <DataGridTemplateColumn
                        Header="First Name"
                        MinWidth="75"
                        CanUserSort="True"
                        SortMemberPath="Id">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate
                                DataType="models:PersonUi">
                                <Grid>
                                    <TextBox 
                                        BorderThickness="0"
                                        HorizontalAlignment="Stretch"
                                        Text="{Binding 
                                            Path=FirstName.Value,
                                            Mode=TwoWay}"
                                        Foreground="{Binding .FirstName, 
                                            Converter={StaticResource PersonValidationColorConverter}}"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn
                        Header="Last Name"
                        MinWidth="75"
                        CanUserSort="True"
                        SortMemberPath="Id">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate
                                DataType="models:PersonUi">
                                <Grid>
                                    <TextBox 
                                        BorderThickness="0"
                                        HorizontalAlignment="Stretch"
                                        Text="{Binding 
                                            Path=LastName.Value,
                                            Mode=TwoWay}"
                                        Foreground="{Binding .LastName, 
                                            Converter={StaticResource PersonValidationColorConverter}}"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn
                        Header="Patronymic Name"
                        MinWidth="75"
                        CanUserSort="True"
                        SortMemberPath="Id">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate
                                DataType="models:PersonUi">
                                <Grid>
                                    <TextBox 
                                        BorderThickness="0"
                                        HorizontalAlignment="Stretch"
                                        Text="{Binding 
                                            Path=PatronymicName.Value,
                                            Mode=TwoWay}"
                                        Foreground="{Binding .PatronymicName, 
                                            Converter={StaticResource PersonValidationColorConverter}}"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn
                        Header="E-Mail"
                        MinWidth="75"
                        CanUserSort="True"
                        SortMemberPath="Id">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate
                                DataType="models:PersonUi">
                                <Grid>
                                    <TextBox 
                                        BorderThickness="0"
                                        HorizontalAlignment="Stretch"
                                        Text="{Binding 
                                            Path=Email.Value,
                                            Mode=TwoWay}"
                                        Foreground="{Binding .Email, 
                                            Converter={StaticResource PersonValidationColorConverter}}"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn
                        Header="E-Mail"
                        MinWidth="75"
                        CanUserSort="True"
                        SortMemberPath="Id">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate
                                DataType="models:PersonUi">
                                <Grid>
                                    <DatePicker
                                        BorderThickness="0"
                                        HorizontalAlignment="Stretch"
                                        DisplayDate="{Binding 
                                            Path=Birthday.Value, 
                                            Mode=OneWay}"
                                        SelectedDate="{Binding 
                                            Path=Birthday.Value,
                                            Mode=TwoWay}"
                                        Foreground="{Binding Birthday, 
                                            Converter={StaticResource PersonValidationColorConverter}}"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                </DataGrid.Columns>
                
            </DataGrid>
            
        </Grid>
            
    </Grid>
    
</Window>
